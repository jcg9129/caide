<Window x:Class="slycelote.VsCaide.Core.UI.PromptDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:slycelote.VsCaide.Core.UI"
             mc:Ignorable="d" 
             WindowStartupLocation="CenterScreen" 
             SizeToContent="Height"
             MinWidth="300"
             MinHeight="100"
             WindowStyle="SingleBorderWindow"
             ResizeMode="CanMinimize" Height="160" Width="330">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Name="txtQuestion" Margin="5"/>
            <TextBox Name="txtResponse" Margin="5"/>
            <Label Name="lblOptionalInputName" />
            <TextBox Name="txtOptionalInput" Margin="5" />
            <StackPanel Orientation="Horizontal" Margin="0,5,5.2,5" HorizontalAlignment="Right" Width="144">
                <Button Content="_OK" IsDefault="True" Margin="5" Name="btnOk" Width="60" />
                <Button Content="_Cancel" IsCancel="True" Margin="5" Name="btnCancel" HorizontalAlignment="Right" Width="60" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
